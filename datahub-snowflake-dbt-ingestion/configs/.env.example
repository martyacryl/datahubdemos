# ==============================================
# Environment Variables Template
# ==============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control

# ==============================================
# SNOWFLAKE CONFIGURATION
# ==============================================
# Snowflake account identifier (format: account_name.region)
# Example: xy12345.us-east-1 or myorg-myaccount
SNOWFLAKE_ACCOUNT=your_account_identifier

# Snowflake credentials (use DATAHUB_USER created via setup script)
SNOWFLAKE_USERNAME=DATAHUB_USER
SNOWFLAKE_PASSWORD=your_strong_password

# Snowflake warehouse (must have OPERATE and USAGE privileges)
SNOWFLAKE_WAREHOUSE=COMPUTE_WH

# Snowflake role (use DATAHUB_ROLE created via setup script)
SNOWFLAKE_ROLE=DATAHUB_ROLE

# ==============================================
# DBT PROJECT CONFIGURATION
# ==============================================
# Absolute path to your dbt project root directory
# This directory should contain the dbt_project.yml file
# Example: /home/user/my-dbt-project or /Users/user/analytics-dbt
DBT_PROJECT_ROOT=/path/to/your/dbt/project

# ==============================================
# DATAHUB CONFIGURATION (Optional)
# ==============================================
# DataHub server URL (default for local DataHub Open Source)
DATAHUB_SERVER=http://localhost:8080

# DataHub authentication token (uncomment if authentication is enabled)
# DATAHUB_TOKEN=your_datahub_token

# ==============================================
# DBT CLOUD CONFIGURATION (Optional)
# ==============================================
# Use these if ingesting from dbt Cloud instead of local artifacts
# DBT_CLOUD_TOKEN=your_dbt_cloud_token
# DBT_CLOUD_ACCOUNT_ID=your_account_id
# DBT_CLOUD_PROJECT_ID=your_project_id  
# DBT_CLOUD_JOB_ID=your_job_id

# ==============================================
# ADVANCED CONFIGURATION (Optional)
# ==============================================
# Environment classification for metadata tagging
# ENVIRONMENT=PROD

# Platform instance identifier (useful for multi-environment setups)
# PLATFORM_INSTANCE=prod

# Email domain for user mapping
# EMAIL_DOMAIN=yourcompany.com
